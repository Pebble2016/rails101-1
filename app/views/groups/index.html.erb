<div class="col-md-12">
  <div class="group">
    <%= link_to("创建新的群组", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>Creator </td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= render_group_description(group)) %></td>
          <td> <%= group.user.email %> </td>
          <td>
              <% if current_user && current_user == group.user %>
              <%= link_to("编辑", edit_group_path(group), class: "btn btn-sm btn-default") %>
              <%= link_to("删除", group_path(group),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" }) %>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
